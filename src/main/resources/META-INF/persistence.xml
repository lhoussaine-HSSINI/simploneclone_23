<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">

        <mapping-file>Brief.xml</mapping-file>
        <mapping-file>Classroom.xml</mapping-file>
        <mapping-file>Admin.xml</mapping-file>
        <mapping-file>Apprenante.xml</mapping-file>
        <mapping-file>Formateur.xml</mapping-file>
        <mapping-file>Promotion.xml</mapping-file>
        <class>MVC.Model.Admin</class>
        <class>MVC.Model.Apprenante</class>
        <class>MVC.Model.Brief</class>
        <class>MVC.Model.Classroom</class>
        <class>MVC.Model.Formateur</class>
        <class>MVC.Model.Promotion</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/simplone"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value=""/>
        </properties>
    </persistence-unit>
</persistence>
